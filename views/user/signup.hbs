<div class="container">

    <div class="row">
        <div class="col s12 m6 offset-m3">

            <div class="row">
                <div class="col s12">
                    <p class="center-align">Sign Up</p>
                </div>
            </div>
            {{!-- important, errors is not flash error --}}
            {{#if errors}}
            <div class="row">
                <div class="col s10 offset-s1 m10 offset-m1 error-msg">
                    {{#each errors}}
                    <p>* {{this.msg}}</p>
                    {{/each}}
                </div>
            </div>
            {{/if}}
            <form action="/users/signup" method="post">

                <div class="row">
                    <div class="input-field col s12">
                        <input name="name" id="name" type="text" class="validate" {{#if name}} value="{{name}}" {{/if}}>
                        <label for="name">mame</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="email" id="email" type="text" class="validate" {{#if email}} value="{{email}}"
                            {{/if}}>
                        <label for="email">email</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="password" id="password" type="password" class="validate" {{#if password}}
                            value="{{password}}" {{/if}}>
                        <label for="password">password</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="confirm" id="confirm" type="password" class="validate">
                        <label for="confirm">confirm password</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field right-align col s12">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                        <button class="btn waves-effect waves-light btn-small" type="submit"
                            name="action">SignUp</button>
                    </div>
                </div>

            </form>

        </div>
    </div>

</div>