{{#if error_msg}}
<div class="row">
    <div class="col s10 offset-s1 m10 offset-m1 error-msg center-align">
        <p>{{error_msg}}</p>
    </div>
</div>
{{/if}}
{{#if success_msg}}
<div class="row">
    <div class="col s10 offset-s1 m10 offset-m1 success-msg center-align">
        <p>{{success_msg}}</p>
    </div>
</div>
{{/if}}
{{#if error}}
<div class="row">
    <div class="col s10 offset-s1 m10 offset-m1 error-msg">
        <p>{{error}}</p>
    </div>
</div>
{{/if}}