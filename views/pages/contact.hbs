<div class="container">

    <div class="row">
        <div class="col s12 m6 offset-m3">

            <div class="row">
                <div class="col s12 contact-div">
                    <p class="center-align">send email</p>
                </div>
            </div>
            {{!-- important, errors is not flash error --}}
            {{#if errors}}
            <div class="row">
                <div class="col s10 offset-s1 m10 offset-m1 error-msg">
                    {{#each errors}}
                    <p>* {{this.msg}}</p>
                    {{/each}}
                </div>
            </div>
            {{/if}}
            {{!-- flash messages --}}
            {{> flashmessages }}
            <form action="/contact" method="post">

                <div class="row">
                    <div class="input-field col s12">
                        <input name="email" id="email" type="text" {{#if email}} value="{{email}}" {{/if}}>
                        <label for="email">email</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <input name="subject" id="subject" type="text" {{#if subject}} value="{{subject}}" {{/if}}>
                        <label for="subject">Subject</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="message" name="message"
                            class="materialize-textarea">{{#if message}}{{message}}{{/if}}</textarea>
                        <label for="message">Message</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field right-align col s12">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                        <button class="btn waves-effect waves-light btn-small" type="submit">SEND</button>
                    </div>
                </div>

            </form>

        </div>
    </div>

</div>